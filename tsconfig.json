{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "noErrorTruncation": true,
    "downlevelIteration": true,
  },
  "exclude": [
    "public",
  ],
  "include": [
    "./src/**/*",
    "**/*.d.ts"
  ],
  "compileOnSave": false
}
